{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "globals": {
        "process": "writable"
    },
    "rules": {
        "indent": [
            "error", 2, { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error", "unix"
        ],
        "unicode-bom": [
            "error", "never"
        ],
        "quotes": [
            "error", "single", { "avoidEscape": true }
        ],
        "semi": [
            "error", "never"
        ],
        "quote-props": [
            "error", "as-needed"
        ],
        "comma-dangle": [
            "error", "always-multiline"
        ],
        "no-var": [
            "error"
        ],
        "no-shadow": [
            "error"
        ],
        "prefer-rest-params": [
            "error"
        ],
        "prefer-spread": [
            "error"
        ],
        "no-extra-parens": [
            "error", "all", { "enforceForArrowConditionals": false,"nestedBinaryExpressions": false }
        ],
        "yoda": [
            "error", "never", { "exceptRange": true }
        ],
        "eqeqeq": [
            "error", "always"
        ],
        "no-self-compare": [
            "error"
        ],
        "no-duplicate-imports": [
            "error"
        ],
        "no-unused-expressions": [
            "error"
        ],
        "no-implicit-coercion": [
            "error"
        ],
        "prefer-arrow-callback": [
            "error"
        ],
        "arrow-parens": [
            "error", "always"
        ],
        "arrow-body-style": [
            "error"
        ],
        "no-confusing-arrow": [
            "error", { "allowParens": true }
        ],
        "no-promise-executor-return": [
            "error"
        ],
        "no-return-await": [
            "error"
        ],
        "no-template-curly-in-string": [
            "error"
        ],
        "require-atomic-updates": [
            "error"
        ],
        "no-use-before-define": [
            "error", { "functions": false }
        ],
        "default-case-last": [
            "error"
        ],
        "no-else-return": [
            "error"
        ],
        "no-lone-blocks": [
            "error"
        ],
        "curly": [
            "error", "multi-or-nest", "consistent"
        ],
        "brace-style": [
            "error"
        ],
        "no-lonely-if": [
            "error"
        ],
        "dot-location": [
            "error", "property"
        ],
        "eol-last": [
            "error", "always"
        ],
        "no-multiple-empty-lines": [
            "error", { "max": 1, "maxBOF": 0, "maxEOF": 1 }
        ],
        "padding-line-between-statements": [
            "error", { "blankLine": "always", "prev": ["case", "default"], "next": "*" },
            { "blankLine": "always", "prev": "*", "next": "return" },
            { "blankLine": "always", "prev": "if", "next": "*" }
        ],
        "object-curly-newline": [
            "error", { "consistent": true, "multiline": true }
        ],
        "padded-blocks": [
            "error", "never"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "block-spacing": [
            "error", "always"
        ],
        "space-before-blocks": [
            "error", "always"
        ],
        "switch-colon-spacing": [
            "error", { "after": false, "before": false }
        ],
        "no-whitespace-before-property": [
            "error"
        ],
        "space-unary-ops": [
            "error", { "words": true, "nonwords": false }
        ],
        "space-infix-ops": [
            "error"
        ],
        "space-before-function-paren": [
            "error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }
        ],
        "arrow-spacing": [
            "error"
        ],
        "object-curly-spacing": [
            "error", "always"
        ],
        "key-spacing": [
            "error", { "beforeColon": false, "afterColon": true }
        ],
        "keyword-spacing": [
            "error"
        ],
        "func-call-spacing": [
            "error"
        ],
        "react/prop-types": [
            "off"
        ],
        "react/self-closing-comp": [
            "error"
        ],
        "react/no-unescaped-entities": [
            "error"
        ],
        "react/prefer-es6-class": [
            "error", "always"
        ],
        "react/void-dom-elements-no-children": [
            "error"
        ],
        "react/jsx-closing-tag-location": [
            "error"
        ],
        "react/jsx-equals-spacing": [
            "error", "never"
        ],
        "react/jsx-indent": [
            "error", 2, { "checkAttributes": true, "indentLogicalExpressions": true }
        ],
        "react/jsx-no-useless-fragment": [
            "error"
        ],
        "react/jsx-curly-newline": [
            "error", "consistent"
        ]
    }
}
